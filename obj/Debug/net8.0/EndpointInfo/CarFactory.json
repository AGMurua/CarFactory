{
  "openapi": "3.0.1",
  "info": {
    "title": "CarFactory",
    "version": "1.0"
  },
  "paths": {
    "/price/{carType}": {
      "get": {
        "tags": [
          "CarType"
        ],
        "parameters": [
          {
            "name": "carType",
            "in": "path",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/CarTypeEnum"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/add": {
      "post": {
        "tags": [
          "Sales"
        ],
        "summary": "Agrega una nueva venta",
        "description": "Este endpoint agrega una nueva venta a la base de datos (mockeada)",
        "requestBody": {
          "description": "Los detalles de la venta a agregar",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddSaleDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/AddSaleDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/AddSaleDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Venta creada correctamente."
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/total-sales-volume": {
      "get": {
        "tags": [
          "Sales"
        ],
        "summary": "Obtiene el volumen total de ventas",
        "description": "Este endpoint devuelve el volumen total de ventas en la base de datos (mockeada)",
        "responses": {
          "200": {
            "description": "Volumen total de ventas."
          }
        }
      }
    },
    "/sales-by-center/{centerName}": {
      "get": {
        "tags": [
          "Sales"
        ],
        "summary": "Obtiene las ventas de un centro de distribucion",
        "description": "Este endpoint devuelve todas las ventas de un centro de distribucion dado",
        "parameters": [
          {
            "name": "centerName",
            "in": "path",
            "description": "El nombre del centro de distribucion",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Ventas del centro de distribucion"
          }
        }
      }
    },
    "/sales-percentage/{carType}/{center}": {
      "get": {
        "tags": [
          "Sales"
        ],
        "summary": "Obtiene el porcentaje de ventas de un modelo por centro",
        "description": "Este endpoint devuelve el porcentaje de ventas para un tipo de coche y centro de distribucion",
        "parameters": [
          {
            "name": "carType",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "center",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Porcentaje de ventas por model"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AddSaleDto": {
        "type": "object",
        "properties": {
          "carType": {
            "$ref": "#/components/schemas/CarTypeEnum"
          },
          "distributionCenterName": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CarTypeEnum": {
        "enum": [
          1,
          2,
          3,
          4
        ],
        "type": "integer",
        "format": "int32"
      }
    }
  }
}