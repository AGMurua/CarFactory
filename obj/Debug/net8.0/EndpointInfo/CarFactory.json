{
  "openapi": "3.0.1",
  "info": {
    "title": "CarFactory",
    "version": "1.0"
  },
  "paths": {
    "/price/{carType}": {
      "get": {
        "tags": [
          "CarType"
        ],
        "parameters": [
          {
            "name": "carType",
            "in": "path",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/CarTypeEnum"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/add": {
      "post": {
        "tags": [
          "Sales"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddSaleDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/AddSaleDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/AddSaleDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/total-sales-volume": {
      "get": {
        "tags": [
          "Sales"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/sales-by-center/{centerName}": {
      "get": {
        "tags": [
          "Sales"
        ],
        "parameters": [
          {
            "name": "centerName",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/sales-percentage": {
      "get": {
        "tags": [
          "Sales"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AddSaleDto": {
        "type": "object",
        "properties": {
          "carType": {
            "$ref": "#/components/schemas/CarTypeEnum"
          },
          "distributionCenterName": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CarTypeEnum": {
        "enum": [
          1,
          2,
          3,
          4
        ],
        "type": "integer",
        "format": "int32"
      }
    }
  }
}